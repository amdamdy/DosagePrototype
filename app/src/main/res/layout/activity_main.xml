<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:background="@android:drawable/dialog_holo_light_frame"
        app:fillColor="#FFFFFFFF"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/age_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/age"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <com.xw.repo.BubbleSeekBar

        android:id="@+id/bubbleSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp"
        app:bsb_bubble_color="@color/colorPrimaryDark"
        app:bsb_bubble_text_color="@android:color/white"
        app:bsb_max="120"
        app:bsb_min="-1"
        app:bsb_section_count="10"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_touch_to_seek="true"
        app:bsb_track_color="@color/grayDark"
        app:bsb_track_size="3dp" />

    <TextView
        android:id="@+id/weight_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/weight"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/weightSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="6dp"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:bsb_bubble_color="@color/colorPrimaryDark"
        app:bsb_bubble_text_color="@android:color/white"
        app:bsb_max="350"
        app:bsb_min="1"
        app:bsb_section_count="10"
        app:bsb_section_text_position="below_section_mark"
        app:bsb_show_progress_in_float="true"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_touch_to_seek="true"
        app:bsb_track_color="@color/grayDark"
        app:bsb_track_size="3dp" />

    <TextView
        android:id="@+id/current_diseases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp"
        android:text="@string/current_diseases"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/diseases1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_shape"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/diabetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diabetes"
            app:buttonTint="@color/colorAccent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/hypertension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hypertension"
            app:buttonTint="@color/colorAccent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/pneumonia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pneumonia"
            app:buttonTint="@color/colorAccent" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/diseases2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_shape"
        android:gravity="center"
        android:orientation="horizontal"
        app:buttonTint="@color/colorAccent">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/smoker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smoker  "
            app:buttonTint="@color/colorAccent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/alcoholic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcoholic       "
            app:buttonTint="@color/colorAccent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cholestero"
            app:buttonTint="@color/colorAccent" />
    </RadioGroup>

    <Button
        android:id="@+id/dosageBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/button_background"
        android:clickable="true"
        android:fontFamily="sans-serif-condensed"
        android:text="Dosage"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold"


        />

</LinearLayout>
